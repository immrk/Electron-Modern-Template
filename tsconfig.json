{
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "bundler",
      "allowArbitraryExtensions": true,
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "useDefineForClassFields": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "types": ["vite/client", "node"],
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "./*.ts",
      "node_modules",
      "dist",
      "src/renderer"
    ]
  }